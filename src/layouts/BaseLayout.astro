---
const { title = "Adam LaCasse", description = "Software engineer. Building projects, writing notes, shipping things." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light dark" />
    <link rel="icon" href="/favicon.svg" />
  </head>

  <body>
    <header style="max-width: 980px; margin: 0 auto; padding: 24px 16px;">
      <nav style="display:flex; align-items:baseline; justify-content:space-between; gap: 16px; flex-wrap:wrap;">
        <a href="/" style="font-weight:700; text-decoration:none;">Adam LaCasse</a>
        <div style="display:flex; gap: 14px; flex-wrap:wrap;">
          <a href="/projects">Projects</a>
          <a href="/blog">Writing</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
        </div>
      </nav>
    </header>

    <main style="max-width: 980px; margin: 0 auto; padding: 0 16px 56px;">
      <slot />
    </main>

    <footer style="max-width: 980px; margin: 0 auto; padding: 24px 16px; border-top: 1px solid rgba(127,127,127,.25);">
      <div style="display:flex; justify-content:space-between; gap:16px; flex-wrap:wrap;">
        <small>© {new Date().getFullYear()} Adam LaCasse</small>
        <small>
          <a href="https://github.com/adamlacasse" target="_blank" rel="noreferrer">GitHub</a>
          {" · "}
          <a href="/rss.xml">RSS</a>
        </small>
      </div>
    </footer>
  </body>
</html>
