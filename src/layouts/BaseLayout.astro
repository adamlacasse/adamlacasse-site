---
import '../styles/global.css';
import '../styles/layout.css';
import { AUTHOR, SITE_DESCRIPTION } from '../consts';

const { title = AUTHOR, description = SITE_DESCRIPTION } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light dark" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
    <link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />
  </head>

  <body>
<header class="site-header">
  <nav class="site-nav">
    <a href="/" class="site-brand">{AUTHOR}</a>
    <div class="site-links">
      <a href="/projects">Projects</a>
      <a href="/blog">Writing</a>
      <a href="/about">About</a>
      <a href="/now">Now</a>
      <a href="/contact">Contact</a>
    </div>
  </nav>
</header>

<main class="site-main">
  <slot />
</main>

    <footer class="site-footer">
      <div>
        <small>© {new Date().getFullYear()} {AUTHOR}</small>
        <small>
          <a href="https://github.com/adamlacasse" target="_blank" rel="noreferrer">GitHub</a>
          {" · "}
          <a href="/rss.xml">RSS</a>
        </small>
      </div>
    </footer>
  </body>
</html>
