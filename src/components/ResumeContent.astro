---
// Reusable resume content component
// Used by both resume.astro (web) and resume/pdf.astro (print)
import { resumeData } from '../data/resume';
---

<div>
  <section>
    <h2>Summary</h2>
    <p set:html={resumeData.summary} />
  </section>

  <section>
    <h2>Core Skills</h2>
    <ul>
      {
        resumeData.skills.map((skill) => (
          <li>
            <strong>{skill.category}:</strong>
            {skill.items}
          </li>
        ))
      }
    </ul>
  </section>

  <section>
    <h2>Experience</h2>

    {
      resumeData.experience.map((role) => (
        <article>
          <div>
            <div>
              <h3>
                {role.company} — {role.title}
              </h3>
              <p>{role.subtitle}</p>
            </div>
            <div>{role.dates}</div>
          </div>

          <ul>
            {role.achievements.map((achievement) => (
              <li set:html={achievement} />
            ))}
          </ul>

          {role.tech && (
            <div>
              <strong>Tech:</strong> {role.tech}
            </div>
          )}
        </article>
      ))
    }
  </section>

  <section>
    <h2>Education</h2>
    <ul>
      {
        resumeData.education.map((edu) => (
          <li>
            <div>
              <div>
                <strong>{edu.degree}</strong> — {edu.school}
              </div>
              {edu.date && <div>{edu.date}</div>}
            </div>
            {edu.note && <p>{edu.note}</p>}
          </li>
        ))
      }
    </ul>
  </section>

  <section>
    <div>
      <div><strong>Daily:</strong> {resumeData.dailyTech}</div>
      <div><strong>Project:</strong> {resumeData.projectTech}</div>
      <div><strong>Portfolio:</strong> <a href="/">adamlacasse.dev</a></div>
    </div>
  </section>
</div>
