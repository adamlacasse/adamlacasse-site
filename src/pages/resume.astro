---
import BaseLayout from '../layouts/BaseLayout.astro';
import ResumeContent from '../components/ResumeContent.astro';
import { AUTHOR } from '../consts';
import { resumeData } from '../data/resume';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: resumeData.name,
  jobTitle: 'Senior Software Engineer',
  description: resumeData.summary.replace(/<[^>]*>/g, ''),
  url: 'https://adamlacasse.dev',
  sameAs: [resumeData.github, resumeData.linkedin],
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Atkinson',
    addressRegion: 'NH',
    addressCountry: 'US',
  },
  knowsAbout: [
    'TypeScript',
    'React',
    'Node.js',
    'Java',
    'AWS',
    'Web Architecture',
    'API Design',
    'Software Engineering',
  ],
};
---

<BaseLayout
  title={`Resume — ${AUTHOR}`}
  description="Senior software engineer specializing in client platforms, web architecture, and foundational systems for enterprise applications."
  contentWidth="narrow"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <div class="mb-6">
    <h1 class="title is-2 mb-2">{resumeData.name}</h1>
    <p class="subtitle is-5 mb-4">{resumeData.headline}</p>

    <div class="block">
      <span class="mr-4">{resumeData.location}</span>
      <span class="mr-4">{resumeData.phone}</span>
      <span class="mr-4"><a href={`mailto:${resumeData.email}`}>{resumeData.email}</a></span>
      <span class="mr-4"
        ><a href={`https://${resumeData.website}`} target="_blank" rel="noopener noreferrer"
          >{resumeData.website}</a
        ></span
      >
      <span class="mr-4"
        ><a href={resumeData.github} target="_blank" rel="noopener noreferrer">GitHub</a></span
      >
      <span
        ><a href={resumeData.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a></span
      >
    </div>

    <div class="mt-4">
      <a href="/resume/pdf" target="_blank" class="button is-link is-light is-small"
        >PDF Optimized Version →</a
      >
    </div>
  </div>

  <ResumeContent />
</BaseLayout>
