---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { AUTHOR } from '../../consts';

const posts = (await getCollection('blog'))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<BaseLayout title={`Writing — ${AUTHOR}`}>
  <h1 class="page-title">Writing</h1>
  <p class="page-intro">Notes on software, projects, and whatever I’m learning.</p>

  <ul class="blog-list">
    {
      posts.map((p) => (
        <li class="blog-item">
          <a href={`/blog/${p.slug}/`} class="blog-item-link">
            {p.data.title}
          </a>
          <div class="blog-date">
            {p.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric',
            })}
          </div>
          <p class="blog-description">{p.data.description}</p>
        </li>
      ))
    }
  </ul>
</BaseLayout>
