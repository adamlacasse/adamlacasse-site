---
// ATS-optimized resume page for print/PDF export
// Use browser print (Cmd/Ctrl+P) to save as PDF
import { resumeData } from '../../data/resume';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Adam LaCasse — Resume</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html,
      body {
        font-family:
          -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell,
          sans-serif;
        line-height: 1.6;
        color: #000;
        background: #fff;
      }

      @media screen {
        body {
          padding: 2rem;
          max-width: 850px;
          margin: 0 auto;
        }
      }

      @media print {
        body {
          margin: 0;
          padding: 0;
          font-size: 11px;
          line-height: 1.4;
        }

        a {
          color: #000;
          text-decoration: none;
        }

        section {
          page-break-inside: avoid;
          margin-bottom: 12pt;
        }

        h2 {
          page-break-after: avoid;
        }
      }

      header {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid #000;
      }

      h1 {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 0.25rem;
      }

      header > p {
        font-size: 14px;
        color: #444;
        margin-bottom: 1rem;
      }

      header > div {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        font-size: 12px;
        color: #333;
      }

      header span {
        display: flex;
        align-items: center;
      }

      header a {
        color: #000;
        text-decoration: none;
      }

      header a:hover {
        text-decoration: underline;
      }

      main {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      section {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        border-left: 3px solid #000;
        padding-left: 1rem;
      }

      h2 {
        font-size: 13px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #000;
        margin-bottom: 0.5rem;
      }

      h3 {
        font-size: 12px;
        font-weight: bold;
        margin-bottom: 0.25rem;
        color: #000;
      }

      p {
        font-size: 11px;
        color: #333;
        margin-bottom: 0.5rem;
      }

      ul {
        list-style-position: inside;
        font-size: 11px;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
      }

      li {
        margin-bottom: 0;
        color: #333;
      }

      strong {
        font-weight: bold;
        color: #000;
      }

      .role-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
      }

      .role-title {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
      }

      .role-dates {
        color: #666;
        font-size: 11px;
        white-space: nowrap;
      }

      .tech {
        color: #444;
        font-size: 11px;
        margin-top: 0.5rem;
      }

      .footer-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        font-size: 11px;
      }

      .footer-info div {
        display: flex;
        gap: 0.5rem;
      }

      .footer-info a {
        color: #000;
        text-decoration: none;
      }

      .footer-info a:hover {
        text-decoration: underline;
      }
    </style>
  </head>

  <body>
    <div>
      <header>
        <h1>{resumeData.name}</h1>
        <p>{resumeData.headline}</p>

        <div>
          <span>{resumeData.location}</span>
          <span>•</span>
          <span>{resumeData.phone}</span>
          <span>•</span>
          <span><a href={`mailto:${resumeData.email}`}>{resumeData.email}</a></span>
          <span>•</span>
          <span
            ><a href={`https://${resumeData.website}`} target="_blank" rel="noopener noreferrer"
              >{resumeData.website}</a
            ></span
          >
          <span>•</span>
          <span
            ><a href={resumeData.github} target="_blank" rel="noopener noreferrer">GitHub</a></span
          >
          <span>•</span>
          <span
            ><a href={resumeData.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a
            ></span
          >
        </div>
      </header>

      <main>
        <section>
          <h2>Summary</h2>
          <p set:html={resumeData.summary} />
        </section>

        <section>
          <h2>Core Skills</h2>
          <ul>
            {
              resumeData.skills.map((skill) => (
                <li>
                  <strong>{skill.category}:</strong>
                  {skill.items}
                </li>
              ))
            }
          </ul>
        </section>

        <section>
          <h2>Experience</h2>

          {
            resumeData.experience.map((role) => (
              <div>
                <div class="role-header">
                  <div class="role-title">
                    <h3>
                      {role.company} — {role.title}
                    </h3>
                    <p style="margin-bottom: 0; color: var(--color-text-light);">{role.subtitle}</p>
                  </div>
                  <div class="role-dates">{role.dates}</div>
                </div>

                <ul>
                  {role.achievements.map((achievement) => (
                    <li set:html={achievement} />
                  ))}
                </ul>

                {role.tech && (
                  <p class="tech">
                    <strong>Tech:</strong> {role.tech}
                  </p>
                )}
              </div>
            ))
          }
        </section>

        <section>
          <h2>Education</h2>
          <ul>
            {
              resumeData.education.map((edu) => (
                <>
                  <li>
                    <strong>{edu.degree}</strong> — {edu.school}
                    {edu.date && <span style="color: var(--color-text-light);"> • {edu.date}</span>}
                  </li>
                  {edu.note && (
                    <li style="color: var(--color-text-light); margin-left: var(--space-md);">
                      {edu.note}
                    </li>
                  )}
                </>
              ))
            }
          </ul>
        </section>

        <section>
          <div class="footer-info">
            <div>
              <strong>Daily:</strong>
              <span>{resumeData.dailyTech}</span>
            </div>
            <div>
              <strong>Project:</strong>
              <span>{resumeData.projectTech}</span>
            </div>
            <div>
              <strong>Portfolio:</strong>
              <span><a href="/">adamlacasse.dev</a></span>
            </div>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
