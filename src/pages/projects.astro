---
import BaseLayout from '../layouts/BaseLayout.astro';
import { AUTHOR } from '../consts';

const projects = [
  {
    name: 'Freq Show',
    description: 'Music discovery for nerds (metadata, discographies, deep cuts).',
    href: 'https://freq-show.adamlacasse.dev',
    repo: 'https://github.com/adamlacasse/freq-show',
    status: 'Active',
  },
  {
    name: 'North Flow',
    description: 'Mindfulness/gratitude check-ins (DB-focused learning project).',
    href: 'https://northflow.adamlacasse.dev',
    repo: 'https://github.com/adamlacasse/northflow',
    status: 'Active',
  },
];
---

<BaseLayout title={`Projects — ${AUTHOR}`}>
  <h1 class="title is-2">Projects</h1>
  <p class="subtitle">A living list. The hub stays stable; projects can come and go.</p>

  <div class="columns is-multiline">
    {
      projects.map((p) => (
        <div class="column is-half">
          <div class="card">
            <div class="card-content">
              <div class="level">
                <div class="level-left">
                  <h2 class="title is-4">{p.name}</h2>
                </div>
                <div class="level-right">
                  <span class="tag is-success is-light">{p.status}</span>
                </div>
              </div>
              <p>{p.description}</p>
            </div>
            <footer class="card-footer">
              <a href={p.href} class="card-footer-item">Live →</a>
              <a href={p.repo} target="_blank" rel="noreferrer" class="card-footer-item">
                Repo →
              </a>
            </footer>
          </div>
        </div>
      ))
    }
  </div>
</BaseLayout>
